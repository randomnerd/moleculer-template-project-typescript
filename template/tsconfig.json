{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": [
      {{#jest}}
      "jest",
      {{/jest}}
      "node"
    ],
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./",
    "plugins": [
      { "transform": "ts-transformer-json-schema/transformer" }
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
